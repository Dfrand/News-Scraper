<div class="savedArt articles">
    <ul>
        {{#each articles }}
        <div class="card border-dark">
            <div class="card-header border-dark">
                <h3 class="card-title">{{title}}</h3>
            </div>
            <div class="card-body">
                 {{!-- <p class="card-text">{{summary}}</p> --}}
                <a class="bg-light text-secondary" href={{link}}>{{link}}</a>
                <!--ADD NOTES button with a data-value of the news articles id-->
                    <div class="btn-group-vertical float-right">
                        <button data-id={{_id}} class="btn btn-sm btn-dark removeSaved">Remove from Saved</button>
                            
                        <button data-id={{_id}} class="btn btn-sm btn-secondary saved-buttons" id="addCheckNote" data-toggle="modal" data-target="#noteModal"
                        data-value="{{this._id}}">View/Add Notes</button>
                    </div>
            </div>
        </div>
        <br />
        <br />


        <!-- Modal -->
        <div id="noteModal" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="noteModalLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <!--title including the id of the current article-->
                        <h4 class="modal-title" id="">
                            <b>Notes:</b>
                        </h4>
                        <!--where notes will be displayed-->
                        <div>
                            <ul id="notesBody">

                            </ul>
                        </div>
                    </div>
                    <div class="modal-body">
                        <div class="form-group">

                            <label for="exampleTextarea">Enter New Note</label>
                            <!--enter note text-->
                            <textarea class="form-control" id="notestext" rows="3"></textarea>
                        </div>
                        <div>
                            <!--enter saved notes here-->
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                        <button data-id={{_id}} data-dismiss="modal" id="saveButton" class="btn btn-dark savenote">Save changes</button>
                    </div>
                </div>
            </div>
        </div>

        {{/each}}
    </ul>

</div>