<div class="articles container">

    {{#each articles }}
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">{{title}}</h3>
        </div>
        <div class="card-body">
            <a class="artLink" href={{link}}>{{link}}</a>
            <button data-id={{_id}} class="btn btn-danger pull-right save-article">Save Article</button>
        </div>
    </div>
    <br />
    <br /> {{/each}}

</div>